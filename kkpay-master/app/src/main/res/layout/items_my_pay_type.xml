<com.kaiserkalep.widgets.shadowLayout.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sl_withdrawal_type"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:elevation="0dp"
    android:focusable="true"
    app:clickable="true"
    app:hl_bindTextView="@id/tv_withdrawal_type"
    app:hl_cornerRadius="5dp"
    app:hl_layoutBackground="@color/sell_paytype_unselect_bg"
    app:hl_layoutBackground_true="@color/sell_paytype_select_bg"
    app:hl_shapeMode="selected"
    app:hl_strokeColor="@color/sell_paytype_unselect_stroke"
    app:hl_strokeColor_true="@color/colorPrimary"
    app:hl_strokeWith="1dp"
    app:hl_textColor="@color/black_33"
    app:hl_textColor_true="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="22dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_IV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:src="@drawable/icon_wechat_logo" />

        <TextView
            android:id="@+id/tv_withdrawal_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textSize="11dp"
            tools:text="afsf" />

    </LinearLayout>

