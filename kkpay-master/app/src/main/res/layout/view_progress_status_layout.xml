<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_top_one"
            style="@style/orderProgressStatusTopStyle"
            android:text="@string/order_detail_progress_one_tip" />

        <TextView
            android:id="@+id/tv_top_two"
            style="@style/orderProgressStatusTopStyle"
            android:text="@string/order_detail_progress_two_tip" />

        <TextView
            android:id="@+id/tv_top_thr"
            style="@style/orderProgressStatusTopStyle"
            android:text="@string/order_detail_progress_thr_tip" />

        <TextView
            android:id="@+id/tv_top_four"
            style="@style/orderProgressStatusTopStyle"
            android:text="@string/order_detail_progress_four_tip" />

    </LinearLayout>

    <com.kaiserkalep.widgets.indicatorseekbar.IndicatorSeekBar
        android:id="@+id/isb_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        app:isb_indicator_color="@color/colorPrimary"
        app:isb_indicator_text_color="@color/white"
        app:isb_max="100"
        app:isb_progress="0"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_tick_marks_type="oval"
        app:isb_thumb_color="@color/seekbar_progress_color"
        app:isb_thumb_size="18dp"
        app:isb_tick_marks_color="@color/no_color"
        app:isb_tick_marks_size="4dp"
        app:isb_ticks_count="4"
        app:isb_track_background_color="@color/seekbar_background_bg"
        app:isb_track_background_size="6dp"
        app:isb_track_progress_color="@color/seekbar_progress_color"
        app:isb_track_progress_size="6dp"
        app:isb_track_rounded_corners="true"
        tools:isb_progress="35" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bottom_date_one"
                style="@style/orderProgressStatusBottomStyle"
                android:text="1-12"
                android:textColor="@color/order_details_m_tip"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_bottom_time_one"
                style="@style/orderProgressStatusBottomStyle"
                android:textColor="@color/order_details_gs_tip"
                android:textSize="9dp"
                tools:text="11:54:29" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bottom_date_two"
                style="@style/orderProgressStatusBottomStyle"
                android:textColor="@color/order_details_m_tip"
                android:textSize="11dp"
                tools:text="1-12" />

            <TextView
                android:id="@+id/tv_bottom_time_two"
                style="@style/orderProgressStatusBottomStyle"
                android:textColor="@color/order_details_gs_tip"
                android:textSize="9dp"
                tools:text="11:54:29" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bottom_date_thr"
                style="@style/orderProgressStatusBottomStyle"
                android:textColor="@color/order_details_m_tip"
                android:textSize="11dp"
                tools:text="1-12" />

            <TextView
                android:id="@+id/tv_bottom_time_thr"
                style="@style/orderProgressStatusBottomStyle"
                android:textColor="@color/order_details_gs_tip"
                android:textSize="9dp"
                tools:text="11:54:29" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bottom_date_four"
                style="@style/orderProgressStatusBottomStyle"
                android:textColor="@color/order_details_m_tip"
                android:textSize="11dp"
                tools:text="1-12" />

            <TextView
                android:id="@+id/tv_bottom_time_four"
                style="@style/orderProgressStatusBottomStyle"
                android:textColor="@color/order_details_gs_tip"
                android:textSize="9dp"
                tools:text="11:54:29" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>