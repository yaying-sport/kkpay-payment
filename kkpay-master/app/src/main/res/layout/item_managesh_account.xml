<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sl_content"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.kaiserkalep.widgets.shadowLayout.ShadowLayout
            android:id="@+id/sl_view"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            app:hl_cornerRadius="20dp"
            app:hl_layoutBackground="@color/white">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center" />

        </com.kaiserkalep.widgets.shadowLayout.ShadowLayout>

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/sl_view"
            android:text="@string/Share_Account"
            android:textColor="@color/sh_m_color"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/tv_del"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            android:src="@drawable/icon_delete" />

    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        style="@style/line_vertical"
        android:layout_alignParentBottom="true" />

</RelativeLayout>