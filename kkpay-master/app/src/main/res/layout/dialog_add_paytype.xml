<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="267dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    skin:enable="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_pay_header_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_update_bottom"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        skin:enable="true">

        <com.kaiserkalep.widgets.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/add_pay_dialog_title"
            android:textColor="@color/edition_update_content_title"
            android:textSize="17dp"
            android:textStyle="bold"
            skin:enable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_pay_dialog_title_tip"
            android:textColor="@color/edition_update_content_text"
            android:textSize="12dp"
            skin:enable="true" />

        <com.kaiserkalep.widgets.shadowLayout.ShadowLayout
            android:id="@+id/sl_btn"
            android:layout_width="180dp"
            android:layout_height="39dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            app:clickable="true"
            app:hl_bindTextView="@id/tv_text"
            app:hl_clickable_text="true"
            app:hl_cornerRadius="23dp"
            app:hl_layoutBackground="@drawable/shape_login_btn_bg"
            app:hl_layoutBackground_clickFalse="@drawable/shape_login_btn_bg_false"
            app:hl_layoutBackground_true="@drawable/shape_login_btn_bg_true"
            app:hl_textColor="@color/btn_confirm"
            app:hl_textColor_true="@color/btn_confirm_true">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/Share_Now_Add"
                android:textSize="15dp" />


        </com.kaiserkalep.widgets.shadowLayout.ShadowLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_close_verify" />

</LinearLayout>