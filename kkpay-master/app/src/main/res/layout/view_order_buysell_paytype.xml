<?xml version="1.0" encoding="utf-8"?>
<com.kaiserkalep.widgets.shadowLayout.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="7dp"
    android:layout_marginTop="-3dp"
    android:layout_marginEnd="7dp"
    android:layout_marginBottom="-3dp"
    app:hl_cornerRadius="3dp"
    app:hl_layoutBackground="@drawable/shape_rectangle_white_bg"
    app:hl_shadowColor="@color/home_shadowColor"
    app:hl_shadowLimit="3dp"
    app:hl_shadowOffsetY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_pay_photo"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <ImageView
                android:id="@+id/coverIcon_IM"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/app_icon"
                android:visibility="gone"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="15dp"
                android:gravity="top|start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pay_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:textColor="@color/order_details_m_tip"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    tools:text="@string/Order_detail_selljia_collenction_tip" />

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_one_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_one_tip"
                    android:layout_width="43dp"
                    android:layout_height="20dp"
                    android:gravity="center_vertical|start"
                    android:textColor="@color/order_details_m_tip"
                    android:textSize="10dp"
                    tools:text="@string/face_idcard_name" />

                <TextView
                    android:id="@+id/tv_one_text"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/sell_gd_details_bg"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/order_details_m_tip"
                    android:textSize="9dp"
                    tools:text="21324546" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_two_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_two_tip"
                    android:layout_width="43dp"
                    android:layout_height="20dp"
                    android:gravity="center_vertical|start"
                    android:textColor="@color/order_details_m_tip"
                    android:textSize="10dp"
                    tools:text="@string/face_idcard_name" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/sell_gd_details_bg">

                    <TextView
                        android:id="@+id/tv_two_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="2dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/order_details_m_tip"
                        android:textSize="9dp"
                        tools:text="213245adfdsfadsfadsfadsfasdfadsfsfadasdsafdsadasfdsffadsafd" />

                    <ImageView
                        android:id="@+id/iv_two_copy"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:src="@drawable/icon_home_copy" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_thr_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_thr_tip"
                    android:layout_width="43dp"
                    android:layout_height="20dp"
                    android:gravity="center_vertical|start"
                    android:textColor="@color/order_details_m_tip"
                    android:textSize="10dp"
                    tools:text="@string/face_idcard_name" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/sell_gd_details_bg">

                    <TextView
                        android:id="@+id/tv_thr_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="2dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/order_details_m_tip"
                        android:textSize="9dp"
                        tools:text="21324546" />

                    <ImageView
                        android:id="@+id/iv_thr_copy"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:src="@drawable/icon_home_copy" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_four_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_four_tip"
                    android:layout_width="43dp"
                    android:layout_height="20dp"
                    android:gravity="center_vertical|start"
                    android:textColor="@color/order_details_m_tip"
                    android:textSize="10dp"
                    tools:text="@string/face_idcard_name" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/sell_gd_details_bg">

                    <TextView
                        android:id="@+id/tv_four_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="2dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/order_details_m_tip"
                        android:textSize="9dp"
                        tools:text="12345678901234567890" />

                    <ImageView
                        android:id="@+id/iv_four_copy"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:src="@drawable/icon_home_copy" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.kaiserkalep.widgets.shadowLayout.ShadowLayout>