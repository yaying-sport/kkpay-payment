<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_content_bg"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/select_merchant_pressed"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.kaiserkalep.widgets.shadowLayout.ShadowLayout
        android:id="@+id/sl_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        app:hl_cornerRadius="20dp"
        app:hl_layoutBackground="@color/white">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center" />

    </com.kaiserkalep.widgets.shadowLayout.ShadowLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp">

        <com.kaiserkalep.widgets.BoldTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/Merchant_m_color"
            android:textSize="12dp"
            tools:text="XX体育" />

        <View
            android:id="@+id/v_line"
            style="@style/line_vertical"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp" />

    </RelativeLayout>

</LinearLayout>